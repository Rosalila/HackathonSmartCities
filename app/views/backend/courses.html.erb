<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Courses
      <small>manage and create new courses</small>
    </h1>
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <% Courses.where(:user_id=>current_user.id).each do |c| %>
      <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
          <div class="inner">
            <h3>
              50
            </h3>
            <p>
              <%= c.name %>
            </p>
          </div>
          <div class="icon">
            <i class="ion ion-stats-bars"></i>
          </div>
          <a class="small-box-footer" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/courses/<%= c.id %>">
            Delete
          </a>
          <a class="small-box-footer" rel="nofollow" href="/backend/courses?course_id=<%= c.id %>">
            Edit
          </a>
        </div>
      </div><!-- ./col -->
      <% end %>
      <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-blue">
          <div class="inner">
            <h3>
              0
            </h3>
            <p>
              ...
            </p>
          </div>
          <div class="icon">
            <i class="ion ion-stats-bars"></i>
          </div>
          <a class="small-box-footer" rel="nofollow" href="/backend/courses?course_id">
            New
          </a>
        </div>
      </div><!-- ./col -->
    </div><!-- /.row -->  

    <!-- Sections as boxes
      En esta parte se tiene se van a cargar todas las secciones por curso
     -->      

    <% @course = Course.find_by_id(params[:course_id]) %>
    <% @course = Course.new if @course == nil %>
    <%= render 'course' %>

<% if params[:course_id]!=nil %>
    <h4 id="Sections" class="page-header">
      Sections
      <small>This sections is for each selected course</small>
    </h4>

    <!-- Solid boxes -->
    <div class="row">
      <% @section_number = 1 %>
      <% @course.sections.each do |s| %>
      <div class="col-md-4">
        <!-- Default box -->
        <div class="box box-solid box-primary">
          <div class="box-header">
            <h3 class="box-title">Section <%=@section_number%></h3>
            <div class="box-tools pull-right">
              <button class="btn btn-default btn-sm" data-widget="collapse"><i class="fa fa-minus"></i></button>
              <button class="btn btn-default btn-sm" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
          </div>

          <div class="box-body">
            <% @section = s %>
            <%= render 'section' %>
          </div><!-- /.box-body -->
        </div><!-- /.box -->
      </div><!-- /.col -->
      <% @section_number+=1 %>
      <% end %>
      <div class="col-md-4">
        <!-- Default box -->
        <div class="box box-solid box-primary">
          <div class="box-header">
            <h3 class="box-title">New section</h3>
            <div class="box-tools pull-right">
              <button class="btn btn-default btn-sm" data-widget="collapse"><i class="fa fa-minus"></i></button>
              <button class="btn btn-default btn-sm" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
          </div>

          <div class="box-body">
            <% @section = Section.new %>
            <%= render 'section' %>
          </div><!-- /.box-body -->
        </div><!-- /.box -->
      </div><!-- /.col -->
    </div>
<% end %>

  </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
