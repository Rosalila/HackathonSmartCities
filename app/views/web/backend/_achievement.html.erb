<div class="col-md-4">
  <!-- Default box -->
  <div class="box box-solid box-primary">
    <div class="box-header">
      <h3 class="box-title"><%= @achievement.name ? @achievement.name : "New Achievement" %></h3>
      <div class="box-tools pull-right">
        <button class="btn btn-default btn-sm" data-widget="collapse"><i class="fa fa-minus"></i></button>
        <button class="btn btn-default btn-sm" data-widget="remove"><i class="fa fa-times"></i></button>
      </div>
    </div>
      <div class="box-body">
        <%= form_for(@achievement) do |f| %>
          <% if @achievement.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@achievement.errors.count, "error") %> prohibited this achievement from being saved:</h2>

              <ul>
              <% @achievement.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <label>Name</label>
            <input name="achievement[name]" type="text" class="form-control" placeholder="Enter ..." value="<%= @achievement.name %>"/>
          </div>

          <div class="form-group">
            <label>Description</label>
            <textarea name="achievement[description]" class="form-control" rows="3" placeholder="Enter ..."><%= @achievement.description %></textarea>
          </div>

          <div class="form-group">
            <label>Icon</label>
            <input required="required" type="file" name="achievement[icon]"/>
          </div>

          <input type="hidden" name="achievement[course_id]" class="form-control" rows="3" placeholder="Enter ..." value="<%= params[:course_id] %>"/>

          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
          <%= link_to 'Destroy', @achievement, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div><!-- /.box-body -->
  </div>
</div>
