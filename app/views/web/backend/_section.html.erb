<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Title</label>
    <input name="section[title]" type="text" class="form-control" placeholder="Enter ..." value="<%= @section.title %>"/>
  </div>

  <div class="form-group">
    <label>Video url</label>
    <input name="section[videourl]" type="text" class="form-control" placeholder="Enter ..." value="<%= @section.videourl %>"/>
  </div>

  <div class="form-group">
    <label>Content</label>
    <textarea name="section[content]" class="form-control" rows="3" placeholder="Enter ..."><%= @section.content %></textarea>
  </div>

  <div class="form-group">
    <label>Homework Description</label>
    <textarea name="section[homework_description]" class="form-control" rows="3" placeholder="Enter ..."><%= @section.homework_description %></textarea>
  </div>

  <div class="form-group">
    <label>Homework price</label>
    <div class="input-group">
      <span class="input-group-addon">√ê</span>
      <input name="section[price]" type="text" class="form-control" value="<%= @section.price %>">
      <span class="input-group-addon">.00</span>
    </div>
  </div>

  <input type="hidden" name="section[course_id]" class="form-control" rows="3" placeholder="Enter ..." value="<%= params[:course_id] %>"/>

  <div class="box-footer">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
  <%= link_to 'Destroy', @section, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
