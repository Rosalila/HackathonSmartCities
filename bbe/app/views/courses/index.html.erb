<p id="notice"><%= notice %></p>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Courses in Progress
    </h1>
  </section>
  
   <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">

        <div class="box">
    <div class="box-header">
    </div><!-- /.box-header -->
      <div class="box-body">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Course</th>
            <th>Enrollments</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td>
              <%= Enrollment.all.where(:course_id => course).size unless course.nil? %>
            </td>
            <td>
              <%= link_to "Join", { controller: "enrollment", action: 'new', id: course.id  },
                                   class: "btn btn-primary" %>
              <!-- <button type="submit" class="btn btn-primary">Continue</button>-->
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /.box-body -->
        </div><!-- /.box -->
      </div><!-- /.col -->
    </div><!-- /.row -->
  </section><!-- /.content -->
</div>