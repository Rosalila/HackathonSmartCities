<p id="notice"><%= notice %></p>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Courses in Progress
    </h1>
  </section>
  
   <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">

        <div class="box">
    <div class="box-header">
    </div><!-- /.box-header -->
      <div class="box-body">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Course</th>
            <th>%</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td>
                <div class="progress progress progress-striped active">
                  <div class="progress-bar progress-bar-primary" style="width:                             50%"></div>
                  </div>
            </td>
            <td>
               <%= link_to "Continue", action: "show", id: course.id %>
              <!-- <button type="submit" class="btn btn-primary">Continue</button>-->
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /.box-body -->
        </div><!-- /.box -->
      </div><!-- /.col -->
    </div><!-- /.row -->
  </section><!-- /.content -->
</div>